<?xml version="1.0"?>
<launch>
	<arg name="x_pos" default="1.0"/>
	<arg name="y_pos" default="1.0"/>
	<arg name="z_pos" default="0.0"/>

	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find lily_bot)/worlds/plaza.world"/>
		<arg name="verbose" default="false"/>
		<arg name="paused" value="false"/>
		<arg name="use_sim_time" value="true"/>
		<arg name="gui" value="true"/>
		<arg name="headless" value="false"/>
		<arg name="debug" value="false"/>
	</include>

	<param name="robot_description" command="$(find xacro)/xacro $(find lily_bot)/urdf/lily_bot.urdf.xacro" />

	<node pkg="robot_state_publisher" type="robot_state_publisher"  name="robot_state_publisher" output = "log">
		<param name="publish_frequency" type="double" value="30.0"/>
	</node>

	<node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model lily_bot -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description"/>

	<node pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py" name="teleop">
		<param name="speed" value="0.3"/>
		<param name="turn" value="0.8"/>
	</node>

	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find lily_bot)/rviz/nav.rviz" />
	
	<node name="map_server" pkg="map_server" type="map_server" args="$(find lily_bot)/maps/map.yaml" output="screen" />
	
	<node pkg="amcl" type="amcl" name="amcl" output="screen">
		<param name="odom_model_type" value="diff"/>
		<param name="odom_alpha1" value="0.01"/>
		<param name="odom_alpha2" value="0.01"/>
		<param name="odom_alpha3" value="0.05"/>
		<param name="odom_alpha4" value="0.01"/>
		<param name="use_map_topic" value="true"/>
		<param name="gui_publish_rate" value="-1.0"/>
		<param name="odom_frame_id" value="odom"/>
	</node>
	
	<node name="move_base" pkg="move_base" type="move_base" output="screen">
		<rosparam file="$(find lily_bot)/config/params.yaml" command="load" />
	</node>

</launch>
  
